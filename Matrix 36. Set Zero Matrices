class Solution {
    int i,j;
    public void setMatrixZeroes(int[][] mat) {
        int numRows = mat.length;
        int numCols = mat[0].length;
        
        boolean[] row = new boolean[numRows];
        boolean[] col = new boolean[numCols];
        
        for(i=0;i<numRows;i++){
            for(j=0;j<numCols;j++){
                if(mat[i][j]==0){
                    row[i]=true;
                    col[j]=true;
                }
            }
        }
        
        for(i=0;i<numRows;i++){
            for(j=0;j<numCols;j++){
                if( row[i]||col[j]){
                    mat[i][j]=0;
                }
            }
        }
    
    }
}
